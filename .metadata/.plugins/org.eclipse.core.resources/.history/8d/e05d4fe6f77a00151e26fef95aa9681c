package vndict

import com.vnstreaming.DictEnVi
import grails.converters.JSON

class ApiController {

    def index() { 
		render "x"
	}
	
	def searchEV(){
		def word = params.word;
		if(word){
			def fWord = DictEnVi.findByWord(word)
			if(fWord){
				render(status:200, contentType: "text/json") {
				    results(title: fWord.phonetic, author: fWord.meanings)
				}
				return
			}
		}
		render (status:404,"Word not found")
	}
}
