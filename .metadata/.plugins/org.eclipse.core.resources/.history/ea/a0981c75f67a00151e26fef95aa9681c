package vndict

import com.vnstreaming.DictEnVi
import grails.converters.JSON

class ApiController {

    def index() { 
		render "x"
	}
	
	def searchEV(){
		def word = params.word;
		if(!word){
			render "Word not found"
			return
		}
		def fWord = DictEnVi.findByWord(word)
		if(fWord){
			render fWord as JSON
			return
		}
		render "Word not found"
	}
}
